<Window x:Class="RecipeAppWPF.IngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppWPF"
        mc:Ignorable="d"
        Title="IngredientWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Calories:"/>
            <TextBox x:Name="CaloriesTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Food group:"/>
            <TextBox x:Name="FoodGroupTextBox" Margin="0,5,0,10"/>
            <Button Content="OK" Click="OkButton_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
