<Window x:Class="RecipeAppWPF.EnterRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppWPF"
        mc:Ignorable="d"
        Title="EnterRecipeWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter the name of the recipe:"/>
            <TextBox x:Name="RecipeNameTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Enter the number of ingredients:"/>
            <TextBox x:Name="NumberOfIngredientsTextBox" Margin="0,5,0,10"/>
            <Button Content="Add Ingredients" Click="AddIngredients_Click" Margin="0,10"/>
            <ListBox x:Name="IngredientsListBox" Margin="0,10"/>
            <Button Content="Save Recipe" Click="SaveRecipe_Click" Margin="0,10"/>

        </StackPanel>
        
    </Grid>
</Window>
