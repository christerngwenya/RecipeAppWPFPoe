<Window x:Class="RecipeAppWPF.DisplayRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppWPF"
        mc:Ignorable="d"
        Title="DisplayRecipeWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter the recipe name:"/>
            <TextBox x:Name="RecipeNameTextBox" Margin="0,5,0,10"/>
            <Button Content="Display Recipe" Click="DisplayRecipe_Click" Margin="0,10"/>
            <TextBlock x:Name="RecipeDetailsTextBlock" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
